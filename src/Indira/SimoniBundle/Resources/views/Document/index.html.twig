{% extends "IndiraSimoniBundle::layout.html.twig" %}

{% block content %}
<div class="row-fluid">
  <div class="span12">
    <section class="page-header">
      <h1>Listado de Documentos</h1>
    </section>
  </div>
</div>
<div class="row-fluid">
  <section class="span9">
    <table class="table table-striped table-bordered">
      <thead>
        <tr>
          <th>Id</th>
          <th>Nombre</th>
          <th>Path</th>
          <th>Usuario</th>
          <th>Acciones</th>
        </tr>
      </thead>
      <tbody>
        {% for entity in entities %}
        <tr>
          <td><a href="{{ path('document_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
          <td>{{ entity.nombre }}</td>
          <td><a href="../../{{ entity.getWebPath }}">{{ entity.path }}</a></td>
          <td>{{ entity.user }}</td>
          <td>
            <a class="btn-block btn btn-primary" href="{{ path('document_show', { 'id': entity.id }) }}">mostrar</a>
          </td>
        </tr>
        {% endfor %}
      </tbody>
    </table>
  </section>
  <aside class="span3">
    <nav class="sidebar-nav">
      <ul class="nav nav-stacked nav-tabs">
        <li>
          <a href="{{ path('document_new') }}"> Importar un Documento </a>
        </li>
      </ul>
    </nav>
  </aside>
</div>
{% endblock %}
