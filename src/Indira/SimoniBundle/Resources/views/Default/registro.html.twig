{% extends "IndiraSimoniBundle::layout.html.twig" %}
{% block content %}
<div class="row">
  <div class="span12">
    <section class="page-header">
      <h1>Registro de Datos</h1>
    </section>
  </div>
</div>
<div class="row">
  <section class="span12">
    <div class="row">
      <div class="span3">
        <a class="btn btn-success btn-block btn-large" href="{{ path('document_new') }}"> Ingresar Multiples Avistamientos </a>
      </div>
      {% for reino in reinos %}
      <div class="span3">
        <a class="btn btn-success btn-block btn-large" href="{{ path('avistamiento_importado_new_reino', { 'reino': reino.id }) }}"> Ingresar Avistamiento de {{ reino.nombre }} </a>
      </div>
      {% endfor %}
      <div class="span3">
        <a class="btn btn-success btn-block btn-large" href="{{ path('denuncia_new') }}"> Ingresar una Denuncia </a>
      </div>
    </div>
  </section>
</div>
<div class="row">
  <div class="span6">
    <div class="row">
      <div class="span6">
        <section class="page-header">
          <h1>Explorar Datos</h1>
        </section>
      </div>
    </div>
    <div class="row">
      <section class="span3">
        <a class="btn btn-info btn-block btn-large" href="{{ path('avistamiento_importado') }}">Avistamientos</a>
      </section>
      <section class="span3">
        <a class="btn btn-info btn-block btn-large" href="{{ path('denuncia') }}"> Denuncias </a>
      </section>
    </div>
  </div>
  <div class="span6">
    <section class="page-header">
      <h1>Reportes</h1>
    </section>
  </div>
  <section class="span6">
    <form action="{{ path('indira_simoni_search_multi') }}" method="post" {{ form_enctype(other) }}>
      {{ form_widget(other) }}
      <p class="form-actions">
        <button class="btn btn-primary" type="submit">
          <i class="icon-search"></i> Buscar
        </button>
      </p>
    </form>
  </section>
</div>
{% endblock %}
