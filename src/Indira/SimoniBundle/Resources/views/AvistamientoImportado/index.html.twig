{% extends "IndiraSimoniBundle::layout.html.twig" %}
{% block content %}
<div class="row">
  <div class="span12">
    <section class="page-header">
      <h1>Listado de Avistamientos</h1>
    </section>
  </div>
</div>
<div class="row">
  <section class="span12">
    <section class="row">
      <div class="span12">
        <table class="table table-striped table-bordered">
          <caption>
            Avistamientos de Flora
          </caption>
          <thead>
            <tr>
              <th>Localidad</th>
              <th>Nombre Com&uacute;n</th>
              <th>Nombre Científico</th>
              <th>Fecha</th>
              <th>Cantidad</th>
              <th>Clase</th>
              <th>Latitud (UTM)</th>
              <th>Longitud (UTM)</th>
              <th>Comentario</th>
              <th>Acciones</th>
            </tr>
          </thead>
          <tbody>
            {% for entity in Flora %}
            <tr>
              <td>{{ entity.localidad }}</td>
              <td>{{ entity.nombreComun }}</td>
              <td>{{ entity.nombreCientifico }}</td>
              <td>{% if entity.fecha %}{{ entity.fecha|date('Y-m-d H:i:s') }}{% endif %}</td>
              <td>{{ entity.cantidad }}</td>
              <td>{{ entity.clase }}</td>
              <td>{{ entity.latitud|number_format(0, '.', '') }}</td>
              <td>{{ entity.longitud|number_format(0, '.', '') }}</td>
              <td>{{ entity.comentario }}</td>
              <td><a class="btn btn-primary" href="{{ path('avistamiento_importado_show', { 'id': entity.id }) }}">mostrar</a><a class="btn btn-success" href="{{ path('avistamiento_importado_edit', { 'id': entity.id }) }}">editar</a></td>
            </tr>
            {% endfor %}
          </tbody>
        </table>
      </div>
    </section>
    <section class="row">
      <div class="span12">
        <table class="table table-striped table-bordered">
          <caption>
            Avistamientos de Fauna
          </caption>
          <thead>
            <tr>
              <th>Localidad</th>
              <th>Nombre Com&uacute;n</th>
              <th>Nombre Científico</th>
              <th>Fecha</th>
              <th>Cantidad</th>
              <th>Clase</th>
              <th>Latitud (UTM)</th>
              <th>Longitud (UTM)</th>
              <th>Comentario</th>
              <th>Acciones</th>
            </tr>
          </thead>
          <tbody>
            {% for entity in Fauna %}
            <tr>
              <td>{{ entity.localidad }}</td>
              <td>{{ entity.nombreComun }}</td>
              <td>{{ entity.nombreCientifico }}</td>
              <td>{% if entity.fecha %}{{ entity.fecha|date('Y-m-d H:i:s') }}{% endif %}</td>
              <td>{{ entity.cantidad }}</td>
              <td>{{ entity.clase }}</td>
              <td>{{ entity.latitud|number_format(0, '.', '') }}</td>
              <td>{{ entity.longitud|number_format(0, '.', '') }}</td>
              <td>{{ entity.comentario }}</td>
              <td><a class="btn btn-primary" href="{{ path('avistamiento_importado_show', { 'id': entity.id }) }}">mostrar</a><a class="btn btn-success" href="{{ path('avistamiento_importado_edit', { 'id': entity.id }) }}">editar</a></td>
            </tr>
            {% endfor %}
          </tbody>
        </table>
      </div>
    </section>
  </section>
</div>
{% endblock %}
