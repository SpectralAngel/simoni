{% extends "IndiraSimoniBundle::layout.html.twig" %}
{% block content %}
<div class="row">
  <div class="span12">
    <section class="page-header">
      <h1>Listado de Denuncias</h1>
    </section>
  </div>
</div>
<div class="row">
  <section class="span12">
    <a class="btn btn-success" href="{{ path('denuncia_new') }}"> Ingresar una Denuncia </a>
    <section class="row">
      <div class="span12">
        <table class="table table-striped table-bordered">
          <thead>
            <tr>
              <th>Id</th>
              <th>Localidad</th>
              <th>Area</th>
              <th>Comentario</th>
              <th>Fecha</th>
              <th>Acciones</th>
            </tr>
          </thead>
          <tbody>
            {% for entity in entities %}
            <tr>
              <td><a href="{{ path('denuncia_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
              <td>{{ entity.localidad }}</td>
              <td>{{ entity.area }}</td>
              <td>{{ entity.comentario }}</td>
              <td>{% if entity.fecha %}{{ entity.fecha|date('Y-m-d H:i:s') }}{% endif %}</td>
              <td>
                  <a class="btn btn-primary" href="{{ path('denuncia_show', { 'id': entity.id }) }}">mostrar</a>
                  <a class="btn btn-success" href="{{ path('denuncia_edit', { 'id': entity.id }) }}">editar</a>
              </td>
            </tr>
            {% endfor %}
          </tbody>
        </table>
      </div>
    </section>
  </section>
</div>
{% endblock %}
