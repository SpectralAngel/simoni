{% extends '::base.html.twig' %}
{% block title %}SIMONI{% endblock %}
{% block stylesheets %}
<link rel="icon" sizes="16x16" href="{{ asset('favicon.ico') }}">
<link rel="stylesheet" href="{{ asset('bundles/indirasimoni/css/bootstrap.css') }}">
<link rel="stylesheet" href="{{ asset('bundles/indirasimoni/css/application.css') }}">
<link rel="stylesheet" href="{{ asset('bundles/indirasimoni/css/bootstrap-responsive.css') }}">
<link rel="stylesheet" href="{{ asset('bundles/indirasimoni/css/jquery-ui.css') }}">
<link rel="stylesheet" href="{{ asset('bundles/indirasimoni/css/print.css') }}" media="print">
<link rel="stylesheet" href="{{ asset('bundles/indirasimoni/css/font-awesome.min.css') }}">
<link rel="stylesheet" href="{{ asset('bundles/indirasimoni/css/evol.colorpicker.css') }}">
{% endblock %}
{% block body %}
<header>
  <nav id="top" class="navbar navbar-inverse navbar-fixed-top no-print">
    <div class="navbar-inner">
      <div class="container-fluid">
        <button type="button" class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
        <a class="brand" href="{{ path('indira_simoni_homepage') }}">Simoni</a>
        <div class="btn-group pull-right">
          {% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
          <a class="btn dropdown-toggle" data-toggle="dropdown" href="#">
            <i class="icon-user"></i> {{ app.user.username }}
            <span class="caret"></span>
          </a>
          <ul class="dropdown-menu">
            <li>
              <a href="{{ path('fos_user_security_logout') }}">{{ 'layout.logout'|trans({}, 'FOSUserBundle') }}</a>
            </li>
          </ul>
          {% else %}
          <a href="{{ path('fos_user_security_login') }}">{{ 'layout.login'|trans({}, 'FOSUserBundle') }}</a>
          {% endif %}
        </div>
        <div class="nav-collapse collapse">
          <ul class="nav">
            <li>
              <a href="{{ path('document') }}">Documentos</a>
            </li>
          </ul>
        </div><!--/.nav-collapse -->
      </div>
    </div>
  </nav>
  {% block heading %}{% endblock %}
</header>
  {% block fos_user_content %}{% endblock %}
<script src="{{ asset('bundles/indirasimoni/js/jquery.js') }}" type="text/javascript"></script>
<script src="{{ asset('bundles/indirasimoni/js/jquery-ui.js') }}" type="text/javascript"></script>
<script src="{{ asset('bundles/indirasimoni/js/bootstrap.js') }}" type="text/javascript"></script>
<script src="{{ asset('bundles/indirasimoni/js/jquery.placeholder.js') }}" type="text/javascript"></script>
<script src="{{ asset('bundles/indirasimoni/js/evol.colorpicker.min.js') }}" type="text/javascript"></script>
<script type="text/javascript">
    $(document).ready(function() {
        $('input, textarea').placeholder();
        $('.datepicker').datepicker({
            dateFormat : 'dd/mm/yy'
        });
        $('.colorpicker').colorpicker();
    });
</script>
{% block javascript %}{% endblock %}
{% endblock %}
