{% extends "FOSUserBundle::layout.html.twig" %}

{% block fos_user_content %}
<div class="row">
  <section class="12">
    <div class="page-header">
      <h1>Crear una Cuenta</h1>
    </div>
  </section>
</div>
<div class="row">
<form action="{{ path("fos_user_security_check") }}" method="post"  class="form-signin span6">
  {% if error %}
  <div>
    {{ error|trans({}, 'FOSUserBundle') }}
  </div>
  {% endif %}
  <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
  <h2 class="form-signin-heading">Iniciar Sesi&oacute;n</h2>
  <input type="text" class="input-block-level" placeholder="{{ 'security.login.username'|trans({}, 'FOSUserBundle') }}"
  id="username" name="_username" value="{{ last_username }}" required="required" />

  <input type="password" class="input-block-level" placeholder="Password" id="password" name="_password" required="required" />

  <label class="checkbox">
    <input type="checkbox" id="remember_me" name="_remember_me" value="on" />
    {{ 'security.login.remember_me'|trans({}, 'FOSUserBundle') }} </label>

  <input class="btn btn-large btn-primary" type="submit" id="_submit" name="_submit" value="{{ 'security.login.submit'|trans({}, 'FOSUserBundle') }}" />
</form>
</div>
{% endblock fos_user_content %}
