{% extends "IndiraSimoniBundle::layout.html.twig" %}

{% block content %}
<div class="row-fluid">
  <div class="span12">
    <section class="page-header">
      <h1>Editar un Avistamiento</h1>
    </section>
  </div>
</div>
<div class="row-fluid">
  <section class="span9">
    <form action="{{ path('denuncia_update', { 'id': entity.id }) }}" method="post" {{ form_enctype(edit_form) }}>
      <input type="hidden" name="_method" value="PUT" />
      {{ form_widget(edit_form) }}
      <p>
        <button type="submit">
          Actualizar
        </button>
      </p>
    </form>
  </section>
  <aside class="span3">
    <nav class="sidebar">
      <ul class="nav nav-stacked nav-tabs">
        <li>
          <a href="{{ path('denuncia') }}"> Regresar a Denuncias </a>
        </li>
      </ul>
    </nav>
  </aside>
</div>
{% endblock %}
